<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/menucardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageView
                android:id="@+id/ordered_product_image"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/menu"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.09"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/ordered_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:ellipsize="end"
                    android:text="Product Name"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#235874"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/ordered_desription"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:ellipsize="end"
                    android:text="@string/menu1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#235874"
                    android:textAlignment="center"
                    android:maxLines="2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/order_price"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:ellipsize="end"
                        android:layout_margin="5dp"
                        android:text="Price"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#235874"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/order_ka_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:ellipsize="end"
                        android:layout_margin="5dp"
                        android:text="1243"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#235874" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/order_status"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:ellipsize="end"
                        android:layout_margin="5dp"
                        android:text="Status"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#235874"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/order_ka_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:ellipsize="end"
                        android:layout_margin="5dp"
                        android:text="1243"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#235874" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>